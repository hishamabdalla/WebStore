@model IEnumerable<Product>
@{
    ViewData["Title"] = "Home Page";
}

<!-- Include Bootstrap CSS for styling -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
<!-- Link to your custom CSS -->


<div class="container mt-5">
    <div class="row g-3">
        @foreach (var product in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="product-card position-relative">
                    <div class="position-absolute top-0 start-0 bg-danger text-white p-2 fw-bold" style="z-index: 10; font-size: 0.8rem;">
                        Sale
                    </div>
                    <div class="product-image">
                        <img src="@product.ImageURL" alt="@product.Name" loading="lazy" />
                    </div>

                    <div class="product-info">
                        <h5 class="product-name">@product.Name</h5>

                        <p class="product-price">
                            <span class="list-price">@product.OriginalPrice.ToString("C", new System.Globalization.CultureInfo("en-US"))</span>
                            <span class="discount-price">@product.Price.ToString("C", new System.Globalization.CultureInfo("en-US"))</span>
                        </p>
                        <a asp-action="Details" asp-route-ProductId="@product.Id" class="btn btn-dark w-100 rounded-pill" >Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Include jQuery and Bootstrap JS for functionality -->
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

